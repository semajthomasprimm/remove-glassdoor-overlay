{

  "manifest_version": 2,
  "name": "Remove Glassdoor Overlay",
  "version": "1.0",
  "author": "Semaj Primm",

  "description": "Removes annoying signin or signup overlay on glassdoor to ensure peaceful browsing.",

  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.glassdoor.com/*",
        "https://*.glassdoor.ca/*",
        "https://*.glassdoor.co.uk/*"
      ],
      "js": ["app.js"]
    }
  ]

}
